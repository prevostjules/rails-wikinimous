<div class="article__header">
  <h2><%= @article.title %></h2>
  <%= link_to edit_article_path(@article) do %>
    <i class="fa fa-pencil"></i>
  <% end %>
  <%= link_to article_path(@article),
    method: :delete,
    data: { confirm: "Are you sure?" } do %>
    <i class="fa fa-trash-o"></i>
  <% end %>
</div>
<p><%= @article.content %></p>

